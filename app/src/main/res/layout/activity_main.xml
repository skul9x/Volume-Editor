<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/bg_app_gradient"
    android:baselineAligned="false">

    <!-- LEFT PANEL - Volume Control -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.8"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_glass_panel"
        android:padding="24dp"
        android:layout_marginEnd="16dp">

        <!-- Volume Display -->
        <TextView
            android:id="@+id/volumeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pct_50"
            android:textSize="80sp"
            android:textColor="@color/neon_cyan"
            android:textStyle="bold"
            android:shadowColor="@color/neon_cyan_dim"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="16"/>

        <!-- Slider Âm lượng -->
        <SeekBar
            android:id="@+id/volumeSeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="50"
            android:progressDrawable="@drawable/seekbar_progress"
            android:thumb="@drawable/seekbar_thumb"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:splitTrack="false"
            android:minHeight="48dp"/>

        <!-- Control Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnMinus"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="@string/symbol_minus"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_modern_accent"
                android:layout_marginEnd="32dp"
                android:stateListAnimator="@null"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnPlus"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:text="@string/symbol_plus"
                android:textSize="48sp"
                android:textColor="#FFFFFF"
                android:background="@drawable/btn_modern_primary"
                android:stateListAnimator="@null"/>

        </LinearLayout>

    </LinearLayout>

    <!-- RIGHT PANEL - Presets & Settings -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.2"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/bg_glass_panel"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/label_quick_presets"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:letterSpacing="0.2"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <!-- Preset Grid -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn0"
                    style="@style/PresetButtonStyle"
                    android:text="@string/preset_mute"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn10"
                    style="@style/PresetButtonStyle"
                    android:text="@string/pct_10"/>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn25"
                    style="@style/PresetButtonStyle"
                    android:text="@string/pct_25"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn50"
                    style="@style/PresetButtonStyle"
                    android:text="@string/pct_50"/>
            </LinearLayout>

            <!-- Row 3 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn75"
                    style="@style/PresetButtonStyle"
                    android:text="@string/pct_75"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn100"
                    style="@style/PresetButtonStyle"
                    android:text="@string/preset_max"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <!-- Floating Toggle -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/floatingToggle"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="@string/label_float_widget_on"
            android:textSize="14sp"
            android:textColor="@color/neon_cyan"
            android:textStyle="bold"
            android:background="@drawable/btn_modern_ghost"
            android:stateListAnimator="@null"/>

    </LinearLayout>

</LinearLayout>
